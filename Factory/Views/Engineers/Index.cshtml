@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
</ul>

<div class="button-border">
  <p class="button">@Html.ActionLink("Add new engineer", "Create")</p>
</div>
<div class="button-border">
  <p class="button">@Html.ActionLink("Home", "Index", "Home")</p>
</div>