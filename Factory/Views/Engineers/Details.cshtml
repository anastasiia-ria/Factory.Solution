@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>Engineer Details</h2>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h2>@Html.DisplayNameFor(model => model.Status): @Html.DisplayFor(model => model.Status)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This engineer does not contain any machines</p>
}
else
{
  <h4>Machines this engineer is licensed to repair:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@Html.ActionLink(@join.Machine.Name, "Details", "Machines", new { id = join.MachineId })</li>
  }
  </ul>
}

<p class="button">@Html.ActionLink("Add a Machine", "AddMachine", new { id = Model.EngineerId })</p>

<p class="button">@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>
<p class="button">@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>